<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 flex flex-col min-h-screen">

    <!-- Header -->
    <header class="bg-blue-700 text-white">
        <div class="container mx-auto flex items-center justify-between py-4 px-6">
            <div class="text-2xl font-bold"><a asp-controller="Home" asp-action="Index">HotelED</a></div>
            <nav class="flex items-center space-x-6">
                <span>UAH</span>
                <a href="#" class="hover:underline">Допомога</a>
                <a asp-controller="Auth" asp-action="Login" class="bg-white text-blue-700 px-4 py-2 rounded hover:bg-gray-100">Зареєструватися</a>
                <a asp-controller="Auth" asp-action="Login" class="px-4 py-2 hover:underline">Увійти</a>
            </nav>
        </div>
    </header>
    @RenderBody()

    @{
        await Html.RenderPartialAsync("Footer");
    }

    @await RenderSectionAsync("Scripts", false)
    </body>
</html>
