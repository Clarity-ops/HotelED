@* Модальне вікно помилок *@
@{
    var errors = ViewBag.Error as List<string> ?? [];
}
@if (ViewBag.Error != null && errors.Count > 0)
{
        <div id="toastError"
             class="fixed bottom-6 right-6 max-w-sm w-full bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-md z-50 animate-fade-in"
             onclick="event.stopPropagation()">
            <div class="flex justify-between items-start gap-4">
                <div class="flex-1">
                    <p class="font-semibold">Помилка:</p>
                    <ul class="list-disc list-inside text-sm mt-1 space-y-1">
                    @foreach (var err in errors)
                    {
                                <li>@err</li>
                    }
                    </ul>
                </div>
                <button onclick="closeToast()" class="text-red-700 hover:text-red-900 text-xl font-bold leading-none">&times;</button>
            </div>
        </div>
}

