@model IEnumerable<Hotel>
<div class="container mx-auto flex items-center justify-between py-4 px-6">
    <h1 class="text-2xl font-semibold">Мої готелі</h1>
    <a id="openCreateBtn" asp-controller="Hotel" asp-action="Create"
    class="flex items-center bg-white text-blue-700 px-4 py-2 rounded shadow-md hover:shadow-lg
                     transition transform hover:scale-105 active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
        viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 4v16m8-8H4" />
        </svg>
        Створити готель
    </a>
</div>

<!-- Контент -->
<main class="flex-grow container mx-auto px-6 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @{
            var counter = 1;
            var delay = 0.1;
        }
        @foreach (var hotel in Model)
        {
            <!-- Приклад картки готелю -->
            <div class="bg-white rounded-lg shadow-md opacity-0 animate-fade-in-up delay-100
              hover:shadow-lg transform hover:scale-105 transition"
                 style="animation-delay: @(delay)s;">
                <img src="@hotel.Images.FirstOrDefault()?.Url"
                     alt="Hotel @counter"
                     class="w-full h-40 object-cover rounded-t-lg" />
                <div class="p-4">
                    <h2 class="text-lg font-semibold text-gray-800">@hotel.Name</h2>
                    <p class="text-sm text-gray-600">@hotel.Location</p>
                    <a asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id"
                       class="mt-3 inline-block text-blue-600 hover:underline text-sm">
                        Деталі →
                    </a>
                </div>
            </div>
            counter++;
            delay += 0.1;
        }
    </div>
</main>


