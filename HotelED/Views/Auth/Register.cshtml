@model RegisterForm
<main class="flex-grow">
    <div class="bg-gray-50 flex items-center justify-center" style="min-height:65vh">
        <div class="bg-white shadow-lg rounded-lg w-full max-w-md">
            <div class="p-6">
                <!-- Register Form -->
                <form id="registerForm" asp-controller="Auth" asp-action="Register" method="post" class="space-y-4">
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700">Ім’я</label>
                        <input asp-for="Name" required
                        class="mt-1 w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"/>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input asp-for="Email" type="email" required
                        class="mt-1 w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Пароль</label>
                        <input asp-for="Password" type="password" required
                        class="mt-1 w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"/>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Підтвердіть пароль</label>
                        <input asp-for="ConfirmPassword" type="password" required
                        class="mt-1 w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"/>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit"
                    class="w-full py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700">
                        Зареєструватися
                    </button>
                    <p class="text-sm text-right">
                        Вже є акаунт?
                        <a asp-controller="Auth" asp-action="Login" id="toLogin" class="text-blue-600 hover:underline">
                            Увійти
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</main>

@* Модальне вікно помилок *@
@await Html.PartialAsync("ModalError", ViewData);

@section Scripts
{
    <script src="/errorModal.js"></script>
}

@section Styles
{
    <link type="text/tailwindcss" href="styles.css" rel="stylesheet"/>
}
