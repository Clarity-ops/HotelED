@model LoginForm
<main class="flex-grow">
    <div class="bg-gray-50 flex items-center justify-center" style="min-height:65vh">
        <div class="bg-white shadow-lg rounded-lg w-full max-w-md">
            <div class="p-6">
                <!-- Login Form -->
                <form id="loginForm" asp-action="Login" asp-controller="Auth" class="space-y-4">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input asp-for="Email" type="email" required
                               class="mt-1 w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Пароль</label>
                        <input asp-for="Password" type="password" required
                               class="mt-1 w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" />
                        <span asp-validation-for="Password"></span>
                        </div>
                    <button type="submit"
                            class="w-full py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700">
                        Увійти
                    </button>
                    <p class="text-sm text-right">
                        Ще немає акаунту?
                        <a asp-controller="Auth" asp-action="Register" id="toRegister" class="text-blue-600 hover:underline">
                            Зареєструватися
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</main>

